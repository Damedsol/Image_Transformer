# Configuración del servidor para producción
PORT=3001
NODE_ENV=production

# Configuración de logging (silencioso en producción)
LOG_LEVEL=silent

# Configuración de seguridad
# En producción, usar generador de claves seguras y guardar en gestor de secretos
JWT_SECRET=cambiar_por_clave_secreta_fuerte_y_compleja
JWT_EXPIRES_IN=1h
API_KEY_EXAMPLE=test-api-key-12345

# Configuración de límites de solicitudes
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
RATE_LIMIT_IMAGE_UPLOAD_MAX=20
RATE_LIMIT_IMAGE_UPLOAD_WINDOW_MS=3600000

# Configuración de imágenes
MAX_FILE_SIZE=5242880
MAX_FILES_PER_REQUEST=5
SHARP_MEMORY_LIMIT=1024
TEMP_FILES_CLEANUP_MS=300000
MAX_IMAGE_WIDTH=4000
MAX_IMAGE_HEIGHT=4000
MAX_ZIP_SIZE=25000000

# Configuración de seguridad avanzada
IMAGE_PROCESSING_TIMEOUT=30
DAILY_QUOTA_PER_USER=100
ENABLE_AUDIT_LOG=false
