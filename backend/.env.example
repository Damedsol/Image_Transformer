# Configuración del servidor
PORT=3001
NODE_ENV=development

# Configuración de CORS (para producción)
# URL del frontend desplegado (ej: https://tu-sitio.netlify.app)
# Para múltiples orígenes, separar por comas: https://sitio1.com,https://sitio2.com
CORS_ORIGIN=
CORS_ORIGINS=

# Configuración de logging
# En desarrollo: debug, info, warn, error
# En producción: silent (no logs)
LOG_LEVEL=debug

# Configuración de seguridad (USAR VALORES SEGUROS EN PRODUCCIÓN)
# Generar con: openssl rand -base64 32
JWT_SECRET=changeme_use_a_strong_random_secret_key_in_production
JWT_EXPIRES_IN=1h
# Generar una API key segura en producción
API_KEY_EXAMPLE=changeme_use_a_strong_api_key_in_production

# Configuración de límites de solicitudes
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
RATE_LIMIT_IMAGE_UPLOAD_MAX=20
RATE_LIMIT_IMAGE_UPLOAD_WINDOW_MS=3600000

# Configuración de imágenes
# Tamaño máximo por archivo (5MB)
MAX_FILE_SIZE=5242880
# Número máximo de archivos por solicitud
MAX_FILES_PER_REQUEST=5
# Memoria máxima para procesamiento de Sharp (70% del valor por defecto)
SHARP_MEMORY_LIMIT=1024
# Tiempo de limpieza de archivos temporales (5 minutos)
TEMP_FILES_CLEANUP_MS=300000
# Dimensiones máximas permitidas para imágenes
MAX_IMAGE_WIDTH=4000
MAX_IMAGE_HEIGHT=4000
# Tamaño máximo para el archivo ZIP resultante
MAX_ZIP_SIZE=25000000

# Configuración de seguridad avanzada
# Tiempo máximo de procesamiento por imagen (segundos)
IMAGE_PROCESSING_TIMEOUT=30
# Cuota diaria de procesamiento por usuario/apikey (número de imágenes)
DAILY_QUOTA_PER_USER=100
# Habilitar registro de auditoría
ENABLE_AUDIT_LOG=true 